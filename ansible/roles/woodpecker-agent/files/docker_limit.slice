[Unit]
Description=Slice that limits docker resources
Before=slices.target

[Slice]
CPUAccounting=true
CPUQuota=4000%
AllowedCPUs=40-79

MemoryAccounting=true
MemoryLimit=100G

IOAccounting=true
IOReadBandwidthMax=
IOWriteBandwidthMax=
