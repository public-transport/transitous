# Limit for routing requests
limit_req_zone $binary_remote_addr zone=api_plan:10m rate=20r/m;

# General limit
limit_req_zone $binary_remote_addr zone=api:10m rate=60r/s;

server {
    listen 443 http2 ssl default_server;
    listen [::]:443 http2 ssl default_server;

    server_name routing-proxy.spline.de;

    deny all;
}

server {
    listen 443 http2 ssl;
    listen [::]:443 http2 ssl;

    # Override TLS settings from included file
    ssl_protocols TLSv1.2 TLSv1.3;

    server_name api.transitous.org;

    charset UTF-8;

    # MOTIS Web Interface
    location / {
        root /opt/motis/ui/;
    }

    # Proxy and cache tiles
    location /api/v1/tiles {
        proxy_pass http://crunchy:8080/api/v1/tiles/;

        proxy_cache            motis;
        proxy_cache_valid      200 302 404 5d;
        proxy_cache_use_stale  error timeout invalid_header updating
                                http_500 http_502 http_503 http_504;
    }

    # Rate limit plan API
    location /api/v1/plan {
        proxy_pass http://crunchy:8080/api/v1/plan/

        limit_req zone=api_plan;

        proxy_connect_timeout       60;
        proxy_send_timeout          60;
        proxy_read_timeout          120;
        send_timeout                60;
    }

    # MOTIS
    location /api/ {
        proxy_pass http://crunchy:8080/api/;

        limit_req zone=api;

        proxy_connect_timeout       60;
        proxy_send_timeout          60;
        proxy_read_timeout          60;
        send_timeout                60;
    }

    # Source files
    location /gtfs/ {
        return 301 https://routing-import.spline.de/$request_uri
    }
}
