[Unit]
Description=MOTIS public transport router
After=network-online.target

[Service]
Type=simple
ExecStart=/opt/motis/motis server
Restart=always
User=motis
WorkingDirectory=/var/lib/motis
LimitNOFILE=30000

[Install]
WantedBy=multi-user.target
